{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["components/*"],
			"@/lib/*": ["lib/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../../packages/ui/src/Spinner.tsx"
	],
	"exclude": ["node_modules"]
}
