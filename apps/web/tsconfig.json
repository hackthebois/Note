{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"types": ["vinxi/types/client"],
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["app/*"]
		},
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
