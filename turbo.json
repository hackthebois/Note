{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"outputs": ["dist/**"]
		},
		"build-cloudflare": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["src/**/*", "package.json", "tsconfig.json"],
			"command": "bun build src/index.ts --outdir=dist --target=browser"
		},
		"type-check": {},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"clean": {},
		"studio": {
			"persistent": true,
			"cache": false
		}
	},
	"globalEnv": ["DATABASE_URL"]
}
